<odoo>
  <data>
    <record id="view_qlsv_lop_tree" model="ir.ui.view">
      <field name="name">qlsv.lop.tree</field>
      <field name="model">qlsv.lop</field>
      <field name="arch" type="xml">
        <list>
          <field name="name" />
          <field name="giang_vien_id" />
          <field name="description" />
        </list>
      </field>
    </record>

    <record id="view_qlsv_lop_form" model="ir.ui.view">
      <field name="name">qlsv.lop.form</field>
      <field name="model">qlsv.lop</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" />
              <field name="giang_vien_id" />
              <field name="sinh_vien_ids" widget="many2many_tags" />
              <field name="description" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_qlsv_lop" model="ir.actions.act_window">
      <field name="name">Lop Hoc</field>
      <field name="res_model">qlsv.lop</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_qlsv_root" name="Quan Ly Sinh Vien" sequence="10" />
    <menuitem id="menu_qlsv_lop" name="Lop Hoc" parent="menu_qlsv_root" action="action_qlsv_lop"
      sequence="10" />
  </data>
</odoo>