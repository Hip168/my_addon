<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_animal_base" model="ir.actions.report">
        <field name="name">Hồ sơ Động vật</field>
        <field name="model">animal.base</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">zoo.report_animal_base_card</field>
        <field name="report_file">zoo.report_animal_base_card</field>
        <field name="print_report_name">'Hồ sơ - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_animal_base"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_animal_base_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center mt-4 mb-4">
                            <h2>Hồ sơ Động vật</h2>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-6">
                                <p><strong>Tên gọi:</strong> <span t-field="o.name"/></p>
                                <p><strong>Loài:</strong> <span t-field="o.species_id.name"/></p>
                                <p><strong>Chuồng nuôi:</strong> <span t-field="o.cage_id.name"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong>Ngày sinh:</strong> <span t-field="o.birthday"/></p>
                                <p><strong>Tuổi:</strong> <span t-field="o.age"/></p>
                                <p><strong>Cân nặng:</strong> <span t-field="o.weight"/> kg</p>
                                <p><strong>Chiều cao:</strong> <span t-field="o.height"/> cm</p>
                            </div>
                        </div>
                        
                        <!-- Example of conditional display if health status exists (from extension) -->
                        <div class="row mt-3" t-if="o.health_status">
                             <div class="col-12">
                                <strong>Tình trạng sức khỏe:</strong> <span t-field="o.health_status"/>
                             </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
