<odoo>
  <data>
    <!-- Explicit list view definition -->
    <record id="view_test_decoration_tree" model="ir.ui.view">
      <field name="name">test.decoration.list</field>
      <field name="model">test.decoration</field>
      <field name="arch" type="xml">
        <list decoration-info="sex == 'male'" decoration-danger="sex == 'female'">
          <header>
            <button name="action_test_api_model" string="Auto Fill DOB (@api.model)" type="object"
              class="oe_highlight" />
          </header>
          <field name="name" />
          <field name="sex" />
          <field name="day_of_birth" />
          <field name="type_sex" />
        </list>
      </field>
    </record>

    <!-- Form view definition -->
    <record id="view_test_decoration_form" model="ir.ui.view">
      <field name="name">test.decoration.form</field>
      <field name="model">test.decoration</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="action_test_api_model" string="Auto Fill DOB (@api.model)" type="object"
              class="oe_highlight" />
          </header>
          <sheet>
            <group>
              <group>
                <field name="name" />
                <field name="sex" />
                <field name="day_of_birth" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action -->
    <record id="action_test_decoration" model="ir.actions.act_window">
      <field name="name">Test Decoration</field>
      <field name="res_model">test.decoration</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_test_decoration_root" name="Test Decoration" sequence="10" />
    <menuitem id="menu_test_decoration_action" parent="menu_test_decoration_root"
      action="action_test_decoration" sequence="10" />

    <!-- Server Action to call @api.model method -->
    <record id="action_server_create_batch_data" model="ir.actions.server">
      <field name="name">Auto Fill DOB (Demo @api.model)</field>
      <field name="model_id" ref="model_test_decoration" />
      <field name="binding_model_id" ref="model_test_decoration" />
      <field name="binding_view_types">list,form</field>
      <field name="state">code</field>
      <field name="code">
        model.check_and_fill_dob()
      </field>
    </record>
  </data>
</odoo>