<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- CATEGORY: Quản lý Động vật -->
        <record model="ir.module.category" id="module_category_zoo">
            <field name="name">Quản lý Động vật và Gấu bông</field>
            <field name="description">Phân quyền quản lý Vườn thú và Shop Gấu bông</field>
            <field name="sequence">10</field>
        </record>

        <!-- PRIVILEGE: Vai trò (Mới trong Odoo 19+) -->
        <!-- Đây là cầu nối giữa Category và Groups -->
        <record id="privilege_zoo_role" model="res.groups.privilege">
            <field name="name">Vai trò</field>
            <field name="category_id" ref="module_category_zoo" />
        </record>

        <!-- GROUP: Nhân viên bán hàng (Sales) -->
        <record id="group_zoo_sales" model="res.groups">
            <field name="name">Nhân viên bán hàng</field>
            <field name="privilege_id" ref="privilege_zoo_role" />
        </record>

        <!-- GROUP: Nhân viên chăm sóc (Staff) -->
        <record id="group_zoo_staff" model="res.groups">
            <field name="name">Nhân viên chăm sóc</field>
            <field name="privilege_id" ref="privilege_zoo_role" />
        </record>

        <!-- GROUP: Quản lý (Manager) -->
        <record id="group_zoo_manager" model="res.groups">
            <field name="name">Quản lý</field>
            <field name="privilege_id" ref="privilege_zoo_role" />
            <field name="implied_ids"
                eval="[(4, ref('group_zoo_staff')), (4, ref('group_zoo_sales'))]" />
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        </record>

    </data>
</odoo> 