<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="quan_ly_doi_bong.FootballDashboard">
        <div class="o_football_dashboard container-fluid p-4">
            <h1 class="mb-4 text-primary">Bảng điều khiển Quản lý Bóng đá</h1>
            
            <div class="row">
                <!-- Card Teams -->
                <div class="col-md-4 mb-4" t-on-click="viewTeams" style="cursor: pointer;">
                    <div class="card text-white bg-info h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Đội bóng</h5>
                            <h2 class="display-4"><t t-esc="state.teamCount"/></h2>
                        </div>
                    </div>
                </div>

                <!-- Card Players -->
                <div class="col-md-4 mb-4" t-on-click="viewPlayers" style="cursor: pointer;">
                    <div class="card text-white bg-success h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Cầu thủ</h5>
                            <h2 class="display-4"><t t-esc="state.playerCount"/></h2>
                        </div>
                    </div>
                </div>

                <!-- Card Matches -->
                <div class="col-md-4 mb-4" t-on-click="viewMatches" style="cursor: pointer;">
                    <div class="card text-white bg-warning h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Trận đấu</h5>
                            <h2 class="display-4"><t t-esc="state.matchCount"/></h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
